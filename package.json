  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^12.4.2",
    "prettier": "2.6.2",
    "rollup": "^2.75.1",
    "rollup-plugin-terser": "^7.0.2"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
